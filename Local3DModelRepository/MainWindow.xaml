<Window x:Class="Local3DModelRepository.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Local3DModelRepository.Controls"
        xmlns:singleitemview="clr-namespace:Local3DModelRepository.Controls.SingleItemView"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Height="700"
        Width="1400"
        Title="Local 3D Model Repository"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Menu bar -->
        <controls:MenuBar Grid.Row="0" VerticalAlignment="Top" />

        <!-- Contents -->
        <singleitemview:SingleItemView Grid.Row="1" />
    </Grid>
</Window>