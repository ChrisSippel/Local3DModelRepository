<ui:Page
      x:Class="Local3DModelRepository.Controls.LocalRepoSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Local3DModelRepository.Controls"
      mc:Ignorable="d" 
      xmlns:ui="http://schemas.modernwpf.com/2019">

    <StackPanel>
        <Button 
            Content="Select directory"
            Command="{Binding SelectRepoLocationCommand}"
            HorizontalAlignment="Center"/>

        <TextBox
            Text="{Binding RepositoryPath}"
            Margin="10, 10, 10, 0"
            HorizontalAlignment="Stretch"
            IsReadOnly="True" />
    </StackPanel>
</ui:Page>